<h2>编辑商品</h2>
<%= simple_form_for [:admin,@product] do |f| %>
    <%= f.input :title,label: '商品名称' %>
    <%= f.input :description,label: '商品描述' %>
    <%= f.input :quantity,label: '商品数量' %>
    <div class="group">
        <%= f.input :price,label: '商品价格' %>
    </div>
    <% if @product.image.present? %>
        <span>目前商品图</span>
        <%= image_tag(@product.image.thumb.url) %>
    <% end %>
    <div class="group">
        <%= f.input :image,as: :file%>
    </div>

    <%= f.submit 'Submit',data: {disable_width: 'Submiting...'} %>
<% end  %>
